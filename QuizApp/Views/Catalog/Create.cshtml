@model QuizApp.Models.ViewModels.CatalogCreateViewModel

@{
    ViewData["Title"] = "Yeni Kataloq Yarat";
}
<style>
    body {
        background-color: #ffffff;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 600px;
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .form-group label {
        font-weight: bold;
        color: #333;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary" style="color:blue;">Yeni Kataloq Yarat</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title" class="form-label">Kataloq Başlığı</label>
            <input asp-for="Title" class="form-control form-control-lg" placeholder="Kataloq başlığını daxil edin" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Yarat</button>
        </div>
    </form>
</div>




