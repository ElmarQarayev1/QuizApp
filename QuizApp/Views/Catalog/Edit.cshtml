@model QuizApp.Models.ViewModels.CatalogEditViewModel
@{
    ViewData["Title"] = "Kataloqu Redaktə Et";
}

<style>
    body {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .edit-container {
        width: 100%;
        max-width: 650px;
    }

    .edit-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        padding: 50px;
        box-shadow: 0 25px 70px rgba(245, 87, 108, 0.4);
        position: relative;
        overflow: hidden;
        animation: slideUp 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .edit-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 8px;
        background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
    }

    .edit-card::after {
        content: '✏️';
        position: absolute;
        top: -80px;
        right: -80px;
        font-size: 250px;
        opacity: 0.03;
        transform: rotate(-15deg);
    }

    .edit-header {
        text-align: center;
        margin-bottom: 45px;
        position: relative;
        z-index: 1;
    }

    .edit-icon-wrapper {
        position: relative;
        display: inline-block;
        margin-bottom: 25px;
    }

    .edit-icon {
        width: 110px;
        height: 110px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 27px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        box-shadow: 0 15px 40px rgba(245, 87, 108, 0.4);
        animation: float 3s ease-in-out infinite;
        position: relative;
        z-index: 2;
    }

    .edit-icon::before {
        content: '';
        position: absolute;
        inset: -5px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 32px;
        opacity: 0.3;
        filter: blur(15px);
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-12px) rotate(5deg); }
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.3; }
        50% { transform: scale(1.1); opacity: 0.5; }
    }

    .edit-title {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 2.2rem;
        font-weight: 800;
        margin: 0 0 12px 0;
        letter-spacing: -0.5px;
    }

    .edit-subtitle {
        color: #718096;
        font-size: 1.05rem;
        font-weight: 500;
    }

    .form-label {
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 12px;
        font-size: 1.15rem;
        display: flex;
        align-items: center;
        gap: 10px;
        letter-spacing: 0.3px;
    }

    .label-icon {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        width: 30px;
        height: 30px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }

    .input-group-custom {
        position: relative;
        margin-bottom: 10px;
    }

    .form-control {
        border: 3px solid #f1f1f1;
        border-radius: 18px;
        padding: 18px 25px 18px 60px;
        font-size: 1.15rem;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        background: #fafafa;
        font-weight: 500;
        color: #2d3748;
    }

    .form-control:focus {
        border-color: #f5576c;
        box-shadow: 0 0 0 6px rgba(245, 87, 108, 0.15);
        background: white;
        outline: none;
        transform: translateY(-2px);
    }

    .input-icon-left {
        position: absolute;
        left: 22px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.4rem;
        pointer-events: none;
        z-index: 1;
        transition: all 0.3s ease;
    }

    .form-control:focus ~ .input-icon-left {
        transform: translateY(-50%) scale(1.1);
    }

    .text-danger {
        color: #f56565;
        font-size: 0.92rem;
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 5px;
        font-weight: 500;
    }

    .text-danger::before {
        content: '⚠️';
        font-size: 1rem;
    }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 35px;
    }

    .btn-save {
        flex: 2;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
        padding: 18px 35px;
        border-radius: 18px;
        font-weight: 700;
        font-size: 1.15rem;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 8px 25px rgba(245, 87, 108, 0.35);
        position: relative;
        overflow: hidden;
        letter-spacing: 0.5px;
    }

    .btn-save::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.4);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .btn-save:hover::before {
        width: 400px;
        height: 400px;
    }

    .btn-save:hover {
        transform: translateY(-4px);
        box-shadow: 0 15px 40px rgba(245, 87, 108, 0.5);
        color: white;
    }

    .btn-save:active {
        transform: translateY(-2px);
    }

    .btn-cancel {
        flex: 1;
        background: white;
        color: #4a5568;
        border: 3px solid #e2e8f0;
        padding: 18px 30px;
        border-radius: 18px;
        font-weight: 700;
        font-size: 1.15rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        letter-spacing: 0.3px;
    }

    .btn-cancel:hover {
        background: #f7fafc;
        border-color: #cbd5e0;
        color: #2d3748;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .info-box {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
        border-radius: 18px;
        padding: 22px;
        margin-top: 30px;
        border-left: 5px solid #f5576c;
        box-shadow: 0 5px 15px rgba(245, 87, 108, 0.1);
    }

    .info-title {
        font-weight: 700;
        color: #f5576c;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.05rem;
    }

    .info-text {
        color: #4a5568;
        font-size: 0.98rem;
        margin: 0;
        line-height: 1.6;
    }

    .char-counter {
        display: block;
        text-align: right;
        color: #a0aec0;
        margin-top: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    @@media (max-width: 768px) {
        .edit-card {
            padding: 35px 25px;
        }

        .button-group {
            flex-direction: column;
        }

        .edit-title {
            font-size: 1.7rem;
        }

        .edit-icon {
            width: 90px;
            height: 90px;
            font-size: 2.8rem;
        }
    }

    /* Loading state */
    .btn-save.loading {
        pointer-events: none;
        opacity: 0.8;
    }

    .btn-save.loading::after {
        content: '⏳';
        margin-left: 8px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>

<div class="edit-container">
    <div class="edit-card">
        <div class="edit-header">
            <div class="edit-icon-wrapper">
                <div class="edit-icon">
                    ✏️
                </div>
            </div>
            <h1 class="edit-title">Kataloqu Yenilə</h1>
            <p class="edit-subtitle">Kataloq məlumatlarını dəyişdirin</p>
        </div>

        <form asp-action="Edit" method="post" id="editForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-4">
                <label asp-for="Title" class="form-label">
                    <span class="label-icon">📚</span>
                    Kataloq Adı
                </label>
                <div class="input-group-custom">
                    <input asp-for="Title" class="form-control"
                           placeholder="Kataloq adını daxil edin..."
                           maxlength="200"
                           id="titleInput" />
                    <span class="input-icon-left">✨</span>
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
                <small class="char-counter" id="charCounter"></small>
            </div>

            <div class="info-box">
                <div class="info-title">
                    💡 Xatırlatma
                </div>
                <p class="info-text">
                    Bu kataloqdakı bütün suallar yenilənmiş adla görünəcək. Kataloq adını dəyişdirdikdən sonra köhnə adı heç bir yerdə görə bilməyəcəksiniz.
                </p>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-save" id="saveBtn">
                    💾 Dəyişiklikləri Saxla
                </button>
                <a asp-action="Index" class="btn-cancel">
                    ↩️ Ləğv Et
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>const titleInput = document.getElementById('titleInput');
        const charCounter = document.getElementById('charCounter');
        const saveBtn = document.getElementById('saveBtn');
        const editForm = document.getElementById('editForm');
        const maxLength = 200;

        // Karakter sayğacı
        function updateCharCounter() {
            const currentLength = titleInput.value.length;
            charCounter.textContent = `${currentLength}/${maxLength} simvol`;

            if (currentLength > maxLength * 0.9) {
                charCounter.style.color = '#f56565';
            } else if (currentLength > maxLength * 0.7) {
                charCounter.style.color = '#f5576c';
            } else {
                charCounter.style.color = '#a0aec0';
            }
        }

        // İlk yükləmədə
        updateCharCounter();

        // Input dəyişdikdə
        titleInput.addEventListener('input', updateCharCounter);

        // Input focus
        titleInput.addEventListener('focus', function() {
            this.parentElement.style.transform = 'scale(1.01)';
        });

        titleInput.addEventListener('blur', function() {
            this.parentElement.style.transform = 'scale(1)';
        });

        // Form submit
        editForm.addEventListener('submit', function(e) {
            const trimmedValue = titleInput.value.trim();

            if (trimmedValue.length === 0) {
                e.preventDefault();
                titleInput.focus();
                titleInput.style.borderColor = '#f56565';
                return;
            }

            saveBtn.classList.add('loading');
            saveBtn.innerHTML = '⏳ Saxlanılır...';
            saveBtn.disabled = true;
        });

        // Real-time validation
        titleInput.addEventListener('input', function() {
            if (this.value.trim().length > 0) {
                this.style.borderColor = '#f5576c';
            } else {
                this.style.borderColor = '#f1f1f1';
            }
        });

        // Enter key ilə submit
        titleInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                editForm.submit();
            }
        });

        // Animation on page load
        window.addEventListener('load', function() {
            titleInput.focus();
            titleInput.select();
        });</script>
}