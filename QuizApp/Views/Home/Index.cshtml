<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xoş Gəlmisiniz</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
        }

        /* Animated background particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .particle {
            position: absolute;
            width: 20px;
            height: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 15s infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) translateX(0) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100vh) translateX(100px) rotate(360deg);
                opacity: 0;
            }
        }

        .container {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .welcome-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 40px;
            padding: 60px 50px;
            max-width: 800px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
            animation: slideUp 1s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            position: relative;
            overflow: hidden;
        }

        .welcome-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 8px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(100px) scale(0.8);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .icon-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .icon-wrapper {
            display: inline-block;
            position: relative;
            animation: bounce 2s ease-in-out infinite;
        }

        .main-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            margin: 0 auto;
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
            position: relative;
            z-index: 2;
        }

        .main-icon::before {
            content: '';
            position: absolute;
            inset: -8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 38px;
            opacity: 0.3;
            filter: blur(20px);
            animation: pulse 2s ease-in-out infinite;
            z-index: -1;
        }

        @@keyframes bounce {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.3; }
            50% { transform: scale(1.15); opacity: 0.5; }
        }

        .welcome-title {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 30px;
            text-align: center;
            letter-spacing: -1px;
            animation: fadeIn 1s ease 0.3s backwards;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message-container {
            text-align: center;
        }

        .message-line {
            color: #4a5568;
            font-size: 1.3rem;
            line-height: 2;
            margin: 15px 0;
            opacity: 0;
            animation: fadeInLine 0.8s ease forwards;
            font-weight: 500;
            position: relative;
            padding-left: 40px;
        }

        .message-line::before {
            content: '✨';
            position: absolute;
            left: 0;
            font-size: 1.5rem;
            animation: twinkle 2s ease-in-out infinite;
        }

        .message-line:nth-child(1) { animation-delay: 0.5s; }
        .message-line:nth-child(1)::before { animation-delay: 0.5s; }
        .message-line:nth-child(2) { animation-delay: 0.7s; }
        .message-line:nth-child(2)::before { content: '🎯'; animation-delay: 0.7s; }
        .message-line:nth-child(3) { animation-delay: 0.9s; }
        .message-line:nth-child(3)::before { content: '💪'; animation-delay: 0.9s; }
        .message-line:nth-child(4) { animation-delay: 1.1s; }
        .message-line:nth-child(4)::before { content: '🌟'; animation-delay: 1.1s; }

        @@keyframes fadeInLine {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes twinkle {
            0%, 100% { transform: scale(1) rotate(0deg); opacity: 1; }
            50% { transform: scale(1.3) rotate(180deg); opacity: 0.8; }
        }

        .success-message {
            background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
            border-radius: 20px;
            padding: 25px;
            margin-top: 40px;
            border-left: 5px solid #667eea;
            animation: fadeIn 1s ease 1.5s backwards;
        }

        .success-text {
            color: #667eea;
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: 1px;
        }

        .decorative-element {
            position: absolute;
            font-size: 150px;
            opacity: 0.03;
        }

        .decorative-element:nth-child(1) {
            top: -50px;
            left: -50px;
            animation: rotate 20s linear infinite;
        }

        .decorative-element:nth-child(2) {
            bottom: -50px;
            right: -50px;
            animation: rotate 25s linear infinite reverse;
        }

        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .floating-icons {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            gap: 15px;
        }

        .floating-icon {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            animation: floatIcon 3s ease-in-out infinite;
        }

        .floating-icon:nth-child(2) { animation-delay: 0.5s; }
        .floating-icon:nth-child(3) { animation-delay: 1s; }

        @@keyframes floatIcon {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        @@media (max-width: 768px) {
            .welcome-card {
                padding: 40px 30px;
                border-radius: 30px;
            }

            .welcome-title {
                font-size: 2rem;
            }

            .message-line {
                font-size: 1.1rem;
                padding-left: 35px;
            }

            .main-icon {
                width: 90px;
                height: 90px;
                font-size: 3rem;
            }

            .success-text {
                font-size: 1.5rem;
            }

            .floating-icons {
                display: none;
            }
        }
    </style>
</head>
<body>
    <!-- Animated particles -->
    <div class="particles">
        <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
        <div class="particle" style="left: 20%; animation-delay: 2s;"></div>
        <div class="particle" style="left: 30%; animation-delay: 4s;"></div>
        <div class="particle" style="left: 40%; animation-delay: 1s;"></div>
        <div class="particle" style="left: 50%; animation-delay: 3s;"></div>
        <div class="particle" style="left: 60%; animation-delay: 5s;"></div>
        <div class="particle" style="left: 70%; animation-delay: 2.5s;"></div>
        <div class="particle" style="left: 80%; animation-delay: 4.5s;"></div>
        <div class="particle" style="left: 90%; animation-delay: 1.5s;"></div>
    </div>

    <div class="container">
        <div class="welcome-card">
            <div class="decorative-element">📚</div>
            <div class="decorative-element">🎓</div>

            <div class="floating-icons">
                <div class="floating-icon">📖</div>
                <div class="floating-icon">✏️</div>
                <div class="floating-icon">🏆</div>
            </div>

            <div class="icon-container">
                <div class="icon-wrapper">
                    <div class="main-icon">🎓</div>
                </div>
            </div>

            <h1 class="welcome-title">Xoş Gəlmisiniz!</h1>

            <div class="message-container">
                <p class="message-line">İmtahanda uğurlar arzulayırıq!</p>
                <p class="message-line">Əminik ki, hər bir sualı doğru cavablandıracaqsınız</p>
                <p class="message-line">Hər bir sual sizin bacarıqlarınızı və biliklərinizi sınayacaq</p>
                <p class="message-line">İmtahanda sizin üçün ən yaxşı nəticələri diləyirik!</p>
            </div>

            <div class="success-message">
                <p class="success-text">🚀 Uğurlar!</p>
            </div>
        </div>
    </div>

    <script>// Extra particle creation for more dynamic effect
        const particlesContainer = document.querySelector('.particles');
        const colors = ['rgba(255, 255, 255, 0.1)', 'rgba(102, 126, 234, 0.15)', 'rgba(118, 75, 162, 0.15)'];

        for (let i = 0; i < 15; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.width = (Math.random() * 10 + 10) + 'px';
            particle.style.height = particle.style.width;
            particle.style.animationDelay = Math.random() * 5 + 's';
            particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
            particle.style.background = colors[Math.floor(Math.random() * colors.length)];
            particlesContainer.appendChild(particle);
        }

        // Add confetti effect on load
        setTimeout(() => {
            createConfetti();
        }, 2000);

        function createConfetti() {
            const confettiColors = ['#667eea', '#764ba2', '#f093fb', '#f5576c'];
            const confettiCount = 50;

            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.style.position = 'fixed';
                confetti.style.width = '10px';
                confetti.style.height = '10px';
                confetti.style.backgroundColor = confettiColors[Math.floor(Math.random() * confettiColors.length)];
                confetti.style.left = Math.random() * window.innerWidth + 'px';
                confetti.style.top = '-10px';
                confetti.style.opacity = '1';
                confetti.style.borderRadius = '50%';
                confetti.style.zIndex = '1000';
                confetti.style.pointerEvents = 'none';
                document.body.appendChild(confetti);

                const animation = confetti.animate([
                    { transform: 'translateY(0) rotate(0deg)', opacity: 1 },
                    { transform: `translateY(${window.innerHeight + 20}px) rotate(${Math.random() * 360}deg)`, opacity: 0 }
                ], {
                    duration: Math.random() * 2000 + 2000,
                    easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
                });

                animation.onfinish = () => confetti.remove();
            }
        }</script>
</body>
</html>