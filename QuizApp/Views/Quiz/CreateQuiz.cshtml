@model QuizApp.Models.ViewModels.QuizCreateViewModel

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 2.2rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 35px;
    }

    .quiz-form-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 10px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 18px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f7fafc;
        font-weight: 500;
        width: 100%;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        background: white;
        outline: none;
    }

    .difficulty-section {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 25px;
        margin-top: 25px;
        border: 2px solid #e9ecef;
    }

    .difficulty-section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        text-align: center;
    }

    .difficulty-cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .difficulty-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        border: 3px solid transparent;
        transition: all 0.3s ease;
        text-align: center;
    }

    .difficulty-card.easy {
        border-color: #28a745;
    }

    .difficulty-card.medium {
        border-color: #ffc107;
    }

    .difficulty-card.hard {
        border-color: #dc3545;
    }

    .difficulty-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }

    .difficulty-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    .difficulty-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .difficulty-card.easy .difficulty-title {
        color: #28a745;
    }

    .difficulty-card.medium .difficulty-title {
        color: #ffc107;
    }

    .difficulty-card.hard .difficulty-title {
        color: #dc3545;
    }

    .difficulty-input {
        width: 100%;
        padding: 12px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1.2rem;
        text-align: center;
        font-weight: 700;
        transition: all 0.3s ease;
    }

    .difficulty-input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .difficulty-card.easy .difficulty-input:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
    }

    .difficulty-card.medium .difficulty-input:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.1);
    }

    .difficulty-card.hard .difficulty-input:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
    }

    .info-text {
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
        margin-top: 15px;
        font-style: italic;
    }

    .btn-modern {
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        justify-content: center;
    }

    .btn-submit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        width: 100%;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-back {
        background: white;
        color: #4a5568;
        border: 2px solid #e2e8f0;
        width: 100%;
    }

    .btn-back:hover {
        background: #f7fafc;
        border-color: #cbd5e0;
    }

    .button-group {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .text-danger {
        color: #f56565;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    @@media (max-width: 768px) {
        .difficulty-cards {
            grid-template-columns: 1fr;
        }

        .button-group {
            flex-direction: column;
        }
    }
</style>

<h2 class="page-header">Yeni İmtahan Yarat</h2>

<div class="quiz-form-card">
    <form asp-action="CreateQuiz" method="post" id="quizForm">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Title" class="form-label">
                İmtahan Başlığı
            </label>
            <input asp-for="Title" class="form-control" placeholder="Məsələn: Riyaziyyat Test 1" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DurationInMinutes" class="form-label">
                Müddət (dəqiqə)
            </label>
            <input asp-for="DurationInMinutes" class="form-control" type="number" min="1" max="180" placeholder="45" />
            <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SelectedCatalogId" class="form-label">
                Kataloq Seçin
            </label>
            <select asp-for="SelectedCatalogId" class="form-control" id="catalogSelect">
                <option value="">-- Kataloq seçin --</option>
                @foreach (var catalog in Model.ExistingCatalogs)
                {
                    <option value="@catalog.Value">@catalog.Text</option>
                }
            </select>
            <span asp-validation-for="SelectedCatalogId" class="text-danger"></span>
        </div>

        <div class="difficulty-section" id="difficultySection" style="display:none;">
            <h3 class="difficulty-section-title">Çətinlik Dərəcəsinə Görə Sual Sayı</h3>

            <div class="difficulty-cards">
                <div class="difficulty-card easy">
                    <div class="difficulty-icon">📗</div>
                    <div class="difficulty-title">Asan Suallar</div>
                    <input type="number" asp-for="EasyQuestionCount" class="difficulty-input"
                           min="0" max="100" placeholder="0" value="0" />
                    <div class="info-text" id="easyAvailable"></div>
                </div>

                <div class="difficulty-card medium">
                    <div class="difficulty-icon">📙</div>
                    <div class="difficulty-title">Orta Suallar</div>
                    <input type="number" asp-for="MediumQuestionCount" class="difficulty-input"
                           min="0" max="100" placeholder="0" value="0" />
                    <div class="info-text" id="mediumAvailable"></div>
                </div>

                <div class="difficulty-card hard">
                    <div class="difficulty-icon">📕</div>
                    <div class="difficulty-title">Çətin Suallar</div>
                    <input type="number" asp-for="HardQuestionCount" class="difficulty-input"
                           min="0" max="100" placeholder="0" value="0" />
                    <div class="info-text" id="hardAvailable"></div>
                </div>
            </div>

            <div class="info-text" style="margin-top: 25px; font-size: 1rem;">
                <strong>Ümumi: <span id="totalQuestions">0</span> sual</strong>
            </div>
        </div>

        <div class="button-group">
            <button type="submit" class="btn-modern btn-submit">
                İmtahan Yarat
            </button>
            <a asp-action="Index" class="btn-modern btn-back">
                Geri Dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>let availableQuestions = { easy: 0, medium: 0, hard: 0 };

        document.getElementById('catalogSelect').addEventListener('change', function () {
            const catalogId = this.value;
            const difficultySection = document.getElementById('difficultySection');

            if (!catalogId) {
                difficultySection.style.display = 'none';
                return;
            }

            fetch(`/Quiz/GetQuestionsByCatalogId?catalogId=${catalogId}`)
                .then(response => response.json())
                .then(questions => {
                    availableQuestions.easy = questions.filter(q => q.difficulty === 1).length;
                    availableQuestions.medium = questions.filter(q => q.difficulty === 2).length;
                    availableQuestions.hard = questions.filter(q => q.difficulty === 3).length;

                    document.getElementById('easyAvailable').textContent =
                        `Mövcud: ${availableQuestions.easy} sual`;
                    document.getElementById('mediumAvailable').textContent =
                        `Mövcud: ${availableQuestions.medium} sual`;
                    document.getElementById('hardAvailable').textContent =
                        `Mövcud: ${availableQuestions.hard} sual`;

                    difficultySection.style.display = 'block';
                })
                .catch(error => {
                    console.error('Xəta:', error);
                    alert('Suallar yüklənərkən xəta baş verdi');
                });
        });

        function updateTotalQuestions() {
            const easy = parseInt(document.querySelector('input[name="EasyQuestionCount"]').value) || 0;
            const medium = parseInt(document.querySelector('input[name="MediumQuestionCount"]').value) || 0;
            const hard = parseInt(document.querySelector('input[name="HardQuestionCount"]').value) || 0;

            document.getElementById('totalQuestions').textContent = easy + medium + hard;
        }

        document.querySelectorAll('.difficulty-input').forEach(input => {
            input.addEventListener('input', updateTotalQuestions);
        });

        document.getElementById('quizForm').addEventListener('submit', function (e) {
            const catalogId = document.getElementById('catalogSelect').value;

            if (!catalogId) {
                e.preventDefault();
                alert('Zəhmət olmasa kataloq seçin');
                return;
            }

            const easy = parseInt(document.querySelector('input[name="EasyQuestionCount"]').value) || 0;
            const medium = parseInt(document.querySelector('input[name="MediumQuestionCount"]').value) || 0;
            const hard = parseInt(document.querySelector('input[name="HardQuestionCount"]').value) || 0;

            if (easy + medium + hard === 0) {
                e.preventDefault();
                alert('Ən azı bir sual seçməlisiniz');
                return;
            }

            if (easy > availableQuestions.easy) {
                e.preventDefault();
                alert(`Asan suallar üçün maksimum ${availableQuestions.easy} sual mövcuddur`);
                return;
            }

            if (medium > availableQuestions.medium) {
                e.preventDefault();
                alert(`Orta suallar üçün maksimum ${availableQuestions.medium} sual mövcuddur`);
                return;
            }

            if (hard > availableQuestions.hard) {
                e.preventDefault();
                alert(`Çətin suallar üçün maksimum ${availableQuestions.hard} sual mövcuddur`);
                return;
            }
        });</script>
}