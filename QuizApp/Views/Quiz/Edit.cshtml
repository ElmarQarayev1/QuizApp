@model QuizCreateViewModel

@{
    ViewData["Title"] = "Quiz Redaktə Et";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Quiz Redaktə Et</h2>

    <form method="post">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="form-group">
                    <label for="Title" class="font-weight-bold">Quiz Başlığı</label>
                    <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
                    <input asp-for="DurationInMinutes" class="form-control" type="number" min="1" max="180" required />
                    <span asp-validation-for="DurationInMinutes" class="text-danger"></span>


                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success btn-block">Redaktə Et</button>
                </div>
            </div>
        </div>
    </form>
</div>
<style>
    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 10px;
    }

    .btn-block {
        padding: 12px;
        font-size: 16px;
    }

    .text-center {
        font-size: 24px;
        font-weight: bold;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 12px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .card-body {
        padding: 25px;
    }

    .card-shadow-sm {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
</style>
