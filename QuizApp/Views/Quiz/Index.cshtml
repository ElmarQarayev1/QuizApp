@model List<Quiz>

<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #1E88E5;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 80%;
        margin: auto;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
        overflow: hidden;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
            font-size: 18px;
        }

        .table th {
            background-color: #1E88E5;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .btn-primary {
        background-color: #1E88E5;
        border-color: #1E88E5;
        color: white;
        padding: 8px 15px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #1565C0;
        }
</style>



<table class="table">
    <thead>
        <tr>
            <th>Başlıq</th>
            <th>Əməliyyat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>
                    @if (User.IsInRole("superadmin"))
                    {
                        <a href="@Url.Action("Edit", "Quiz", new { id = quiz.Id })" class="btn btn-warning">Redaktə et</a>
                        <form asp-action="DeleteConfirmed" method="post" class="d-inline" onsubmit="return confirm('Bu quizi silmək istədiyinizə əminsinizmi?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@quiz.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>

                    }

                    <a asp-action="TakeQuiz" asp-route-id="@quiz.Id" class="btn btn-primary">İmtahana Başla</a>
                </td>
            </tr>
        }
    </tbody>
</table>
